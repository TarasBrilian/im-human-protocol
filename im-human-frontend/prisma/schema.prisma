// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User Model - stores basic user information
model User {
  id              String           @id @default(cuid())
  walletAddress   String           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // Prevent duplicate flags
  hasCompletedVerification Boolean  @default(false)
  hasCompletedAnalysis     Boolean  @default(false)
  hasUploadedToWalrus      Boolean  @default(false)

  // Relations
  verifications   Verification[]
  addressBindings AddressBinding[]
  analysisResults AnalysisResult[]
  walrusUploads   WalrusUpload[]

  @@index([walletAddress])
}

// CEX Verification Model - stores verification from centralized exchanges
model Verification {
  id          String   @id @default(cuid())
  cexType     String   // "binance", "bybit", "okx", etc.
  userId      String   // CEX user identifier
  proofs      Json     // Array of proof objects from Reclaim
  verified    Boolean  @default(false)
  sessionId   String?  // Reclaim session ID
  timestamp   DateTime @default(now())

  // Relations
  user        User     @relation(fields: [userWalletAddress], references: [walletAddress], onDelete: Cascade)
  userWalletAddress String

  @@unique([userWalletAddress, cexType])
  @@index([userWalletAddress])
  @@index([userId])
  @@index([cexType])
}

// Address Binding Model - stores wallet signature bindings
model AddressBinding {
  id        String   @id @default(cuid())
  address   String
  cexType   String   // Which CEX this binding is for
  userId    String   // CEX user identifier
  signature String?  // Wallet signature
  message   String?  // Signed message
  bound     Boolean  @default(true)
  timestamp DateTime @default(now())

  // Relations
  user      User     @relation(fields: [address], references: [walletAddress], onDelete: Cascade)

  @@unique([address, cexType])
  @@index([address])
  @@index([userId])
  @@index([cexType])
}

// Analysis Result Model - stores onchain activity analysis
model AnalysisResult {
  id                      String   @id @default(cuid())
  walletAddress           String   @unique
  humanScore              Int
  successRate             Float
  totalTransactions       Int
  successfulTransactions  Int
  failedTransactions      Int
  aiAnalysis              String?  @db.Text
  createdAt               DateTime @default(now())

  // Relations
  user                    User     @relation(fields: [walletAddress], references: [walletAddress], onDelete: Cascade)

  @@index([walletAddress])
  @@index([humanScore])
  @@index([createdAt])
}

// Walrus Upload Model - stores Walrus blob uploads
model WalrusUpload {
  id                String   @id @default(cuid())
  walletAddress     String   @unique
  blobId            String   @unique
  encryptedData     Json?    // Metadata about encrypted data
  uploadedAt        DateTime @default(now())

  // Relations
  user              User     @relation(fields: [walletAddress], references: [walletAddress], onDelete: Cascade)

  @@index([walletAddress])
  @@index([blobId])
  @@index([uploadedAt])
}
